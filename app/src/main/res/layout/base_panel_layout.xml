<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/defualt_touming_bg"
    android:minWidth="222dp"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panelTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/titleBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/touming_btn"
            android:text="@string/floatingTitle"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/closeFloatingBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/closeFloatingBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#56DDDDDD"
            android:text="@string/closeFloating"
            android:textColor="#F83737"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/kaiOrShouBtn"
            app:layout_constraintStart_toEndOf="@+id/titleBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/kaiOrShouBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#56DDDDDD"
            android:text="@string/kaiOrShoue"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/closeFloatingBtn"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>